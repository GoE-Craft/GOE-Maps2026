{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "goe_tnt:shop_buy",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/goe/tnt/ui/confirm"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.size_over_life = 1;v.random_location_x = math.random(-1, 1) * 4;v.random_location_z = math.random(-1, 1) * 4;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 150,
				"max_particles": 250
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.21
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, 5, 0],
				"radius": 2,
				"plane_normal": "z",
				"direction": "outwards"
			},
			"minecraft:particle_initialization": {
				"per_update_expression": "v.size_over_life = 1 - (v.particle_age / v.particle_lifetime);"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 3.2
			},
			"minecraft:particle_initial_spin": {
				"rotation": -90
			},
			"minecraft:particle_initial_speed": 6,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.sin(v.particle_age * 90)", -10, "math.cos(v.particle_age * 40)"],
				"linear_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.5 * v.size_over_life", "0.6 * v.size_over_life"],
				"facing_camera_mode": "lookat_direction",
				"uv": {
					"texture_width": 32,
					"texture_height": 192,
					"flipbook": {
						"base_UV": [0, 98],
						"size_UV": [32, 32],
						"step_UV": [0, 32],
						"frames_per_second": 14,
						"max_frame": 7,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime ",
					"gradient": {
						"0.17": "#FFFFFFFF",
						"0.34": "#FFFFD400",
						"0.6": "#FFC06900",
						"0.96": "#FFFF8000"
					}
				}
			}
		}
	}
}