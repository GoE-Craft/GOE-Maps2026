{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.goe.tnt.mecha_suit": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": [ "idle" ],
          "transitions": [
            { "walk_forward": "q.modified_move_speed > 0.1" }
          ],
          "blend_transition": 0.1
        },

        "walk_forward": {
          "animations": [ "walk_forward" ],
          "transitions": [
            { "walk_to_idle": "q.modified_move_speed < 0.1" }
          ],
          "blend_transition": 0.1
        },

        "walk_to_idle": {
          "animations": [ "walk_to_idle" ],
          "transitions": [
            { "idle": "query.any_animation_finished" },
            { "walk_forward": "q.modified_move_speed > 0.1" }
          ],
          "blend_transition": 0.1
        }
      }
    }
  }
}
