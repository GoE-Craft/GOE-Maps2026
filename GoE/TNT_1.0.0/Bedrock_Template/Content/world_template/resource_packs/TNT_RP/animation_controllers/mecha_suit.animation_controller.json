{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.goe.tnt.mecha_suit": {
      "initial_state": "spawn",
      "states": {
        "spawn": {
          "animations": [
            "spawn"
          ],
          "transitions": [
            { "idle": "query.all_animations_finished" },
            { "death": "q.mark_variant == 2" }
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "idle": {
          "animations": [
            "idle"
          ],
          "transitions": [
            {"walk_forward": "q.modified_move_speed > 0.1"},
            {"death": "q.mark_variant == 2"}
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "walk_forward": {
          "animations": [
            "walk_forward"
          ],
          "transitions": [
            {"walk_to_idle": "q.modified_move_speed < 0.1"},
            {"death": "q.mark_variant == 2"}
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "walk_to_idle": {
          "animations": [
            "walk_to_idle"
          ],
          "transitions": [
            { "idle": "query.property('goe_tnt:tnt_action') == 'idle'" },
            {"walk_forward": "q.modified_move_speed > 0.1"},
            {"death": "q.mark_variant == 2"}
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "death": {
          "animations": [
            "death"
          ]
        }
      }
    }
  }
}