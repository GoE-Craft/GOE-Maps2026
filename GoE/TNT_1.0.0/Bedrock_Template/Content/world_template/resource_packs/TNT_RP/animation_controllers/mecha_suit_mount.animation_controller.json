{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.goe_tnt.mecha_suit_mount": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": [ "idle" ],
          "transitions": [
            { "mount": "q.has_rider" }
          ]
        },

        "mount": {
          "sound_effects": [ { "effect": "mount_sound" } ],
          "transitions": [
            { "idle": "!q.has_rider" }
          ]
        }
      }
    }
  }
}