{
  "format_version": "1.20.0",
  "minecraft:entity": {
    "description": {
      "identifier": "goe_tnt:mecha_suit",
      "is_spawnable": true,
      "is_summonable": true,
      "properties": {
        "goe_tnt:tnt_action": {
          "type": "enum",
          "values": [ "idle", "charge", "charged", "fire" ],
          "default": "idle",
          "client_sync": true
        }
      },
      "animations": {
        "controller.mecha_suit.root": "controller.animation.goe.tnt.mecha_suit",
        "death": "animation.goe_tnt.mecha_suit.death"
      },

      "scripts": {
        "animate": [
          "controller.mecha_suit.root"
        ]
      }
    },
    "component_groups": {
      "goe_tnt:death": {
        "minecraft:mark_variant": {
          "value": 2
        },
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "cause": "all",
              "deals_damage": "no"
            }
          ]
        },
        "minecraft:timer": {
          "time": 3,
          "looping": false,
          "time_down_event": {
            "event": "goe_tnt:despawn",
            "target": "self"
          }
        }
      },
      "goe_tnt:despawn": {
        "minecraft:instant_despawn": { "remove_child_entities": true }
      }
    },
    "components": {
      "minecraft:knockback_resistance": {
        "value": 5,
        "max": 5
      },
      "minecraft:damage_sensor": {
        "triggers": [
          { "cause": "fall", "deals_damage": false },
          { "cause": "all", "deals_damage": true, "on_damage": {
              "event": "goe_tnt:death",
              "target": "self",
              "filters": [
                { "test": "actor_health", "value": 1, "operator": "<=" }
              ]
            }
          }
        ]
      },


      "minecraft:health": { "value": 100, "max": 100, "min": 1 },

      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },

      "minecraft:collision_box": {
        "height": 2.5,
        "width": 2.0
      },

      "minecraft:push_through": {
        "value": 0
      },

      "minecraft:pushable": {
        "is_pushable": true
      },

      "minecraft:movement": { "value": 0.13 },
      "minecraft:movement.basic": { },

      "minecraft:navigation.generic": { },

      "minecraft:can_power_jump": { },

      "minecraft:horse.jump_strength": {
        "value": { "range_min": 1, "range_max": 1 }
      },

      "minecraft:input_ground_controlled": { },

      "minecraft:rideable": {
        "seat_count": 1,
        "seats": [
          { "position": [ 0, 2.25, 0 ] }
        ]
      },

      "minecraft:variable_max_auto_step": {
        "base_value": 1.2,
        "controlled_value": 1.2
      }
    },

    "events": {
      "goe_tnt:death": { "add": { "component_groups": [ "goe_tnt:death" ] }
      },
      "goe_tnt:despawn": { "add": { "component_groups": [ "goe_tnt:despawn" ] } },
      "goe:charge_tnt": {
        "set_property": { "goe_tnt:tnt_action": "charge" }
      },
      "goe:fire_tnt": {
        "set_property": { "goe_tnt:tnt_action": "fire" }
      },
      "goe:idle_tnt": {
        "set_property": { "goe_tnt:tnt_action": "idle" }
      },
      "goe:charged_tnt": {
        "set_property": { "goe_tnt:tnt_action": "charged" }
      }
    }
  }
}
