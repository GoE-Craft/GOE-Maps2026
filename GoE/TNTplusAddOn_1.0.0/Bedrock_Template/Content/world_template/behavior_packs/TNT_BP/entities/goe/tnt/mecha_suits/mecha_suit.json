{
  "format_version": "1.20.0",
  "minecraft:entity": {
    "description": {
      "identifier": "goe_tnt:mecha_suit",
      "is_spawnable": true,
      "is_summonable": true,
      "properties": {
        "goe_tnt:tnt_action": {
          "type": "enum",
          "values": ["idle", "charge", "charged", "fire"],
          "default": "idle",
          "client_sync": true
        },
        "goe_tnt:fire_hand": {
          "type": "enum",
          "values": ["right", "left"],
          "default": "right",
          "client_sync": true
        }
      }
    },

    "component_groups": {
      "goe_tnt:family_default": {
        "minecraft:type_family": {
          "family": ["mecha_suit"]
        }
      },

      "goe_tnt:death": {
        "minecraft:mark_variant": { "value": 2 },
        "minecraft:damage_sensor": {
          "triggers": [
            { "cause": "all", "deals_damage": false }
          ]
        },
        "minecraft:timer": {
          "time": 3,
          "looping": false,
          "time_down_event": {
            "event": "goe_tnt:despawn",
            "target": "self"
          }
        }
      },

      "goe_tnt:despawn": {
        "minecraft:instant_despawn": {
          "remove_child_entities": true
        }
      },

      "goe_tnt:spawn": {
        "minecraft:mark_variant": { "value": 3 },
        "minecraft:timer": {
          "time": 2.9,
          "looping": false,
          "time_down_event": {
            "event": "goe_tnt:spawn_reset",
            "target": "self"
          }
        }
      },

      "goe_tnt:spawn_reset": {
        "minecraft:mark_variant": { "value": 0 }
      },

      "goe_tnt:ride_enabled": {
        "minecraft:rideable": {
          "seat_count": 1,
          "seats": [
            { "position": [0, 2.25, 0.25] }
          ]
        }
      },

      "goe_tnt:wings": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:can_power_jump": {},
        "minecraft:horse.jump_strength": {
          "value": 0
        }
      },
      "goe_tnt:no_wings": {
        "minecraft:variant": {
          "value": 0
        },
        "minecraft:can_power_jump": {},
        "minecraft:horse.jump_strength": {
          "value": 1.3
        }
      }
    },

    "components": {
      "minecraft:interact": {
        "interactions": [
          {
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "is_family", "subject": "other", "value": "player" },
                  { "test": "is_mark_variant", "subject": "self", "value": 3 }
                ]
              },
              "event": "goe_tnt:deny_mount_spawning"
            }
          }
        ]
      },

      "minecraft:knockback_resistance": { "value": 5, "max": 5 },

      "minecraft:damage_sensor": {
        "triggers": [
          { "cause": "entity_explosion", "deals_damage": false },
          { "cause": "block_explosion", "deals_damage": false },
          { "cause": "fire", "deals_damage": false },
          { "cause": "fall", "deals_damage": false },
          {
            "on_damage": {
              "event": "goe_tnt:death",
              "target": "self",
              "filters": [
                { "test": "actor_health", "value": 1, "operator": "<=" }
              ]
            }
          },
          {
            "cause": "all",
            "deals_damage": true,
            "damage_multiplier": 0.2
          }
        ]
      },

      "minecraft:health": { "value": 20, "max": 20, "min": 1 },

      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },

      "minecraft:collision_box": {
        "height": 4,
        "width": 3.0
      },

      "minecraft:push_through": { "value": 0 },
      "minecraft:pushable": { "is_pushable": false },

      "minecraft:movement": { "value": 0.17 },
      "minecraft:movement.basic": {},
      "minecraft:navigation.generic": {},

      "minecraft:input_ground_controlled": {},

      "minecraft:variable_max_auto_step": {
        "base_value": 1.2,
        "controlled_value": 1.2
      }
    },

    "events": {
      "goe_tnt:deny_mount_spawning": {
        "queue_command": {
          "command": [
            "playsound note.bass @p ~ ~ ~ 0.3"
          ]
        }
      },

      "goe_tnt:spawn_reset": {
        "add": {
          "component_groups": [
            "goe_tnt:spawn_reset",
            "goe_tnt:ride_enabled"
          ]
        },
        "queue_command": {
          "command": [
            "playsound random.orb @p ~ ~ ~ 1 1",
            "titleraw @p actionbar {\"rawtext\":[{\"text\":\"Â§a[Info] The TNT Mecha Suit is ready, interact to mount.\"}]}"
          ]
        }
      },

      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "goe_tnt:spawn",
            "goe_tnt:family_default",
            "goe_tnt:no_wings"
          ]
        }
      },

      "goe_tnt:death": {
        "queue_command": {
          "command": [
            "ride @p stop_riding"
          ]
        },
        "add": {
          "component_groups": ["goe_tnt:death"]
        }
      },

      "goe_tnt:despawn": {
        "add": {
          "component_groups": ["goe_tnt:despawn"]
        }
      },

      "goe:charge_tnt": {
        "set_property": { "goe_tnt:tnt_action": "charge" }
      },

      "goe:idle_tnt": {
        "set_property": { "goe_tnt:tnt_action": "idle" }
      },

      "goe:charged_tnt": {
        "set_property": { "goe_tnt:tnt_action": "charged" }
      },

      "goe:fire_tnt_right": {
        "set_property": {
          "goe_tnt:fire_hand": "right",
          "goe_tnt:tnt_action": "fire"
        }
      },

      "goe:fire_tnt_left": {
        "set_property": {
          "goe_tnt:fire_hand": "left",
          "goe_tnt:tnt_action": "fire"
        }
      },

      "goe_tnt:equip_elytra": {
        "add": {
          "component_groups": [
            "goe_tnt:wings"
          ]
        },
        "remove": {
          "component_groups": [
            "goe_tnt:no_wings"
          ]
        }
      }
    }
  }
}