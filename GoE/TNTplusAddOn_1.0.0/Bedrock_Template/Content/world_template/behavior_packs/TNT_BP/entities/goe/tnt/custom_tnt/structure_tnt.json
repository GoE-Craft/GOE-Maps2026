{
    "format_version": "1.21.130",
    "minecraft:entity": {
        "description": {
            "identifier": "goe_tnt:structure_tnt",
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "goe_tnt:flashing": {
                    "type": "bool",
                    "client_sync": true,
                    "default": false
                },
                "goe_tnt:swell": {
                    "type": "bool",
                    "client_sync": true,
                    "default": false
                }
            }
        },
        "component_groups": {
            "goe_tnt:ignite": {
                "minecraft:mark_variant": {
                    "value": 1
                },
                "minecraft:timer": {
                    "time": 0.5,
                    "looping": true,
                    "time_down_event": {
                        "event": "goe_tnt:toggle_flash",
                        "target": "self"
                    }
                }
            },
            "goe_tnt:explode": {
                "minecraft:mark_variant": {
                    "value": 2
                }
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [ "custom_tnt", "inanimate" ]
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": "no"
                    }
                ]
            },
            "minecraft:body_rotation_blocked": {},
            "minecraft:health": {
                "value": 1,
                "max": 1
            },
            "minecraft:renders_when_invisible": {},
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:pushable": { "is_pushable": false, "is_pushable_by_piston": false },  
            "minecraft:collision_box": {
                "height": 0.98,
                "width": 0.98
            },
            "minecraft:projectile": {
                "gravity": 0.001,
                "inertia": 0.999
            },
            "minecraft:conditional_bandwidth_optimization": {
                "default_values": {
                    "max_optimized_distance": 80.0,
                    "max_dropped_ticks": 5,
                    "use_motion_prediction_hints": true
                }
            }
        },
        "events": {
            "goe_tnt:trigger_ignite": {
                "add": {
                    "component_groups": [
                        "goe_tnt:ignite"
                    ]
                }
            },
            "goe_tnt:start_swell": {
                "set_property": {
                    "goe_tnt:swell": true
                }
            },
            "goe_tnt:toggle_flash": {
                "sequence": [
                    {
                        "filters": {
                            "test": "bool_property",
                            "domain": "goe_tnt:flashing",
                            "value": false
                        },
                        "set_property": {
                            "goe_tnt:flashing": true
                        }
                    },
                    {
                        "filters": {
                            "test": "bool_property",
                            "domain": "goe_tnt:flashing",
                            "value": true
                        },
                        "set_property": {
                            "goe_tnt:flashing": false
                        }
                    }
                ]
            }
        }
    }
}