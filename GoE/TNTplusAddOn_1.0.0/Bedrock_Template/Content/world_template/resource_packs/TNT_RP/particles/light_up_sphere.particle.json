{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "goe_tnt:light_sphere",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/goe/tnt/particles/light_fog"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "variable.size = 0.03;variable.lifetime = 2.2;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "math.random(1,20)",
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 2
			},
			"minecraft:emitter_shape_sphere": {
				"offset": ["0-variable.particle_age", 0, "0-variable.particle_age"],
				"radius": 0.5,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.5
			},
			"minecraft:particle_expire_if_not_in_blocks": ["minecraft:air"],
			"minecraft:particle_initial_speed": "math.random(-3,3)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.random(-3,3)", "math.random(-3,3)", "math.random(-3,3)"],
				"linear_drag_coefficient": "math.random_integer(0,5)"
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["1+variable.size*(variable.lifetime-variable.particle_age)", "1+variable.size*(variable.lifetime-variable.particle_age)"],
				"facing_camera_mode": "rotate_xyz"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00FFFFFF",
						"0.5": "#FFFFE100",
						"1.0": "#00FFFFFF"
					}
				}
			}
		}
	}
}