{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "goe_tnt:glitch_text",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/goe/tnt/particles/glitch_missing_tile"
			}
		},
		"curves": {
			"variable.transparency": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 1, 0, 1, 0, 1, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 100,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.5
			},
			"minecraft:emitter_shape_sphere": {
				"radius": 5,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.25,1)"
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": "math.random(1,3)"
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.1, 0.1],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 16,
					"flipbook": {
						"base_UV": ["math.round(math.random_integer(-1,1))", "math.round(math.random_integer(-4,4))"],
						"size_UV": [16, 16],
						"step_UV": [0, 0],
						"frames_per_second": 2,
						"max_frame": 1,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "(v.particle_age / v.particle_lifetime)*25*variable.transparency",
					"gradient": {
						"0.0": "#FF372CFF",
						"0.27": "#FFFFFFFF",
						"0.51": "#FF61FF69",
						"0.78": "#ffffffff",
						"1.0": "#FFFF2CD8"
					}
				}
			}
		}
	}
}