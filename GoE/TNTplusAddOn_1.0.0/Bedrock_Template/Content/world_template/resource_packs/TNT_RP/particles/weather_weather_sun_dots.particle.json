{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "goe_tnt:weather_sun_dots",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/goe/tnt/particles/glow"
			}
		},
		"curves": {
			"variable.size": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 1, 0]
			},
			"variable.ball": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 0, 200, 200, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 30
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.8
			},
			"minecraft:emitter_shape_sphere": {
				"offset": [0, 1, 0],
				"radius": 0.5,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(1,1.6)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": 90
			},
			"minecraft:particle_initial_speed": 25,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "v.emitter_lifetime * v.ball", 0],
				"linear_drag_coefficient": "math.random(3,5)"
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["v.particle_age * v.emitter_lifetime * (v.particle_random_1*0.3)", "v.particle_age * v.emitter_lifetime* (v.particle_random_1*0.3)"],
				"facing_camera_mode": "rotate_xyz"
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0.3
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00001C7C",
						"0.11": "#FF3DCBFF",
						"0.26": "#FFD6FF3D",
						"0.31": "#FFFFE01B",
						"0.67": "#B0C47B00",
						"1.0": "#00722B00"
					}
				}
			}
		}
	}
}