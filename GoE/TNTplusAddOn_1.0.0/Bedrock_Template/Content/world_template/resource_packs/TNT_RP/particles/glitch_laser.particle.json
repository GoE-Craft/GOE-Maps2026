{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "goe_tnt:glitch_laser",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/goe/tnt/particles/glitch_laser"
			}
		},
		"curves": {
			"variable.transparency": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 1, 0, 1, 0, 1, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 25,
				"max_particles": 25
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.2
			},
			"minecraft:emitter_shape_sphere": {
				"radius": 2,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.25,0.5)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": 90
			},
			"minecraft:particle_initial_speed": -0.1,
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": [1000, 0.1],
				"facing_camera_mode": "direction_x",
				"uv": {
					"texture_width": 32,
					"texture_height": 32,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [32, 32],
						"step_UV": [32, 0],
						"frames_per_second": 1,
						"max_frame": 2,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "(v.particle_age / v.particle_lifetime)*250*variable.transparency",
					"gradient": {
						"0.0": "#FFFF2CD8",
						"12.0": "#ffffffff",
						"24.0": "#FFFDC705",
						"37.0": "#ffffffff",
						"49.0": "#FFFAA300",
						"62.0": "#ffffffff",
						"75.0": "#FF61FF69",
						"88.0": "#ffffffff",
						"100.0": "#FF372CFF"
					}
				}
			}
		}
	}
}