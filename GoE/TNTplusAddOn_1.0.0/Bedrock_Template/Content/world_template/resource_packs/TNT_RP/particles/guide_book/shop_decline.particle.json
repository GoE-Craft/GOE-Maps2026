{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "goe_tnt:shop_decline",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/goe/tnt/particles/x"
			}
		},
		"curves": {
			"variable.grow": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 5]
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.size_over_life = 1;v.random_location_x = math.random(-1, 1) * 4;v.random_location_z = math.random(-1, 1) * 4;variable.radius =1.5;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 100,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.21
			},
			"minecraft:emitter_shape_box": {
				"offset": ["variable.radius*-math.sin(variable.emitter_age*720)", 0, "variable.radius*math.cos(variable.emitter_age*720)"],
				"half_dimensions": [0.05, 0.02, 0],
				"direction": "outwards"
			},
			"minecraft:particle_initialization": {
				"per_update_expression": "v.size_over_life = 1 - (v.particle_age / v.particle_lifetime);"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 2.2
			},
			"minecraft:particle_initial_spin": {
				"rotation": -90
			},
			"minecraft:particle_initial_speed": "math.random(-25,25) * v.particle_lifetime",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.random(-10,10) * v.particle_age", "25 * v.particle_age", "math.random(-10,10) * v.particle_age"],
				"linear_drag_coefficient": 6
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.3 * v.grow) * v.particle_random_1", "(0.3 * v.grow)* v.particle_random_1"],
				"facing_camera_mode": "rotate_xyz"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime ",
					"gradient": {
						"0.0": "#FFFF9D4F",
						"0.19": "#FFFF2D00",
						"0.43": "#FFC11515",
						"0.69": "#006C001B"
					}
				}
			}
		}
	}
}