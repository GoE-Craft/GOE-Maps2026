{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "goe_tnt:glass_tnt",
      "materials": {
        "default": "entity_alphatest",
        "semi_transparent": "goe_tnt_border"
      },
      "textures": {
				"default": "textures/blocks/tnt_side"
      },
      "geometry": {
				"default": "geometry.tnt"
      },
			"scripts": {
        "pre_animation": [
          "v.should_swell = query.property('goe_tnt:swell');"
        ],
        "animate": [
          {"tnt_swelling": "v.should_swell"},
          {"charge": "q.mark_variant == 1"},
          {"explode": "q.mark_variant == 2"}
        ]
			},
      "animations": {
        "tnt_swelling": "animation.tnt.swell",
        "explode":"animation.glass_tnt.explode",
        "charge":"animation.glass_tnt.charge"
      },
      "particle_effects": {
        "big_explosion_white": "goe_tnt:big_explosion_white",
        "tnt_charge": "goe_tnt:tnt_charge_blue"/* , 
        "glass_impact_radius": "goe_tnt:glass_impact_radius" */
      },
      "render_controllers": [ "controller.render.tnt" ]
    }
  }
}