{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "goe_tnt:glass_tnt",
      "materials": {
        "default": "entity_alphatest",
        "semi_transparent": "goe_tnt_border"
      },
      "textures": {
				"default": "textures/goe/tnt/entity/glass_tnt"
      },
      "geometry": {
				"default": "geometry.glass_tnt"
      },
			"scripts": {
        "pre_animation": [
          "v.should_swell = query.property('goe_tnt:swell');"
        ],
        "animate": [
          {"tnt_swelling": "q.mark_variant == 1"},
          {"charge": "q.mark_variant == 1"},
          {"explode": "q.mark_variant == 2"}
        ]
			},
      "animations": {
        "tnt_swelling": "animation.tnt.swell_weather_rain",
        "explode":"animation.glass_tnt.explosion",
        "charge":"animation.glass_tnt.charge"
      },
      "particle_effects": {
        "glass_explode": "goe_tnt:glass_explode",
        "glass_shine": "goe_tnt:glass_shine",
        "tnt_charge_darkblue": "goe_tnt:tnt_charge_darkblue"
      },
      "render_controllers": [ "controller.render.glass_tnt" ]
    }
  }
}