{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.goe.tnt.mecha_suit": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": [ "idle" ],
/*           "sound_effects": [ { "effect": "idle_sound" } ], */
          "transitions": [
            { "walk_forward": "q.modified_move_speed > 0.1" },
            { "jump": "q.vertical_speed > 1 && !q.is_on_ground" },
            { "death": "q.mark_variant == 2" }
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "walk_forward": {
          "animations": [ "walk_forward" ],
          "transitions": [
            { "walk_to_idle": "q.modified_move_speed < 0.1" },
            { "jump_walk": "q.vertical_speed > 1 && !q.is_on_ground" },
            { "death": "q.mark_variant == 2" }
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "walk_to_idle": {
          "animations": [ "walk_to_idle" ],
          "transitions": [
            { "idle": "q.all_animations_finished" },
            { "walk_forward": "q.modified_move_speed > 0.1" },
            { "jump": "q.vertical_speed > 1 && !q.is_on_ground" },
            { "death": "q.mark_variant == 2" }
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "jump": {
          "animations": [ "jump" ],
          "sound_effects": [ { "effect": "jump_sound" } ],
          "transitions": [
            { "idle": "q.is_on_ground" },
            { "death": "q.mark_variant == 2" }
          ],
          "blend_transition": 0.3,
          "blend_via_shortest_path": true
        },
        "jump_walk": {
          "animations": [ "jump_walk" ],
          "sound_effects": [ { "effect": "jump_sound" } ],
          "transitions": [
            { "walk_forward": "q.is_on_ground" },
            { "death": "q.mark_variant == 2" }
          ],
          "blend_transition": 0.6,
          "blend_via_shortest_path": true
        },
        "death": {
          "animations": [ "death" ]
        }
      }
    }
  }
}